/* pages/constellation/constellation.wxss */
.text{
  margin: 20rpx;
  padding: 0 20rpx;
  background-color: #fff;
  border-radius: 4rpx;
  font-size: 28rpx;
}
.list{
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx;
}
.list-item{
  flex: 0 0 310rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
}
.list-item:nth-child(2n){
  margin-right: 0;
}
.list-item image{
  width: 210rpx;
  height: 210rpx;
  margin: 10rpx 0;
}